{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "virtualNetworkName": {
        "type": "string"
      },
      "vnetIPAddressRange": {
        "type": "string"
      },
      "DeploySubnet": {
        "type": "string"
      },
      "DeploySubnetAddressRange": {
        "type": "string"
      },
      "DeploySubnetSecurityGroupName": {
        "type": "string"
      },
      "FrontendSubnet": {
        "type": "string"
      },
      "FrontendSubnetAddressRange": {
        "type": "string"
      },
      "FrontendSubnetSecurityGroupName": {
        "type": "string"
      },
      "WebSubnet": {
        "type": "string"
      },
      "WebSubnetAddressRange": {
        "type": "string"
      },
      "WebSubnetSecurityGroupName": {
        "type": "string"
      },
      "DataSubnet": {
        "type": "string"
      },
      "DataSubnetAddressRange": {
        "type": "string"
      },
      "DataSubnetSecurityGroupName": {
        "type": "string"
      },
      "AppSubnet": {
        "type": "string"
      },
      "AppSubnetAddressRange": {
        "type": "string"
      },
      "AppSubnetSecurityGroupName": {
        "type": "string"
      }
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[parameters('DeploySubnetSecurityGroupName')]",
        "apiVersion": "2015-06-15",
        "location": "[resourceGroup().location]",
        "properties": {
          "securityRules": []
        }
      },
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[parameters('FrontendSubnetSecurityGroupName')]",
        "apiVersion": "2015-06-15",
        "location": "[resourceGroup().location]",
        "properties": {
          "securityRules": []
        }
      },
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[parameters('WebSubnetSecurityGroupName')]",
        "apiVersion": "2015-06-15",
        "location": "[resourceGroup().location]",
        "properties": {
          "securityRules": []
        }
      },
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[parameters('DataSubnetSecurityGroupName')]",
        "apiVersion": "2015-06-15",
        "location": "[resourceGroup().location]",
        "properties": {
          "securityRules": []
        }
      },
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[parameters('AppSubnetSecurityGroupName')]",
        "apiVersion": "2015-06-15",
        "location": "[resourceGroup().location]",
        "properties": {
          "securityRules": []
        }
      },
      {
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[parameters('virtualNetworkName')]",
        "apiVersion": "2017-06-01",
        "location": "[resourceGroup().location]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('vnetIPAddressRange')]"
            ]
          },
          "subnets": [
            {
              "name": "[parameters('DeploySubnet')]",
              "properties": {
                "addressPrefix": "[parameters('DeploySubnetAddressRange')]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('DeploySubnetSecurityGroupName'))]"
                }
              }
            },
            {
              "name": "[parameters('FrontendSubnet')]",
              "properties": {
                "addressPrefix": "[parameters('FrontendSubnetAddressRange')]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('FrontendSubnetSecurityGroupName'))]"
                }
              }
            },
            {
              "name": "[parameters('WebSubnet')]",
              "properties": {
                "addressPrefix": "[parameters('WebSubnetAddressRange')]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('WebSubnetSecurityGroupName'))]"
                }
              }
            },
            {
              "name": "[parameters('DataSubnet')]",
              "properties": {
                "addressPrefix": "[parameters('DataSubnetAddressRange')]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('DataSubnetSecurityGroupName'))]"
                }
              }
            },
            {
              "name": "[parameters('AppSubnet')]",
              "properties": {
                "addressPrefix": "[parameters('AppSubnetAddressRange')]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('AppSubnetSecurityGroupName'))]"
                }
              }
            }
          ]
        },
        "dependsOn": [
          "[concat('Microsoft.Network/networkSecurityGroups/', parameters('DeploySubnetSecurityGroupName'))]",
          "[concat('Microsoft.Network/networkSecurityGroups/', parameters('FrontendSubnetSecurityGroupName'))]",
          "[concat('Microsoft.Network/networkSecurityGroups/', parameters('WebSubnetSecurityGroupName'))]",
          "[concat('Microsoft.Network/networkSecurityGroups/', parameters('DataSubnetSecurityGroupName'))]",
          "[concat('Microsoft.Network/networkSecurityGroups/', parameters('AppSubnetSecurityGroupName'))]"
        ]
      }
    ],
    "outputs": {}
  }
  
